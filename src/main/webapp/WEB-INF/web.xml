<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>IndividualWeb01</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>ContactoServlet</servlet-name>
		<servlet-class>controller.ContactoServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AboutServlet</servlet-name>
		<servlet-class>controller.AboutServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GaleriaServlet</servlet-name>
		<servlet-class>controller.GaleriaServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>InicioServlet</servlet-name>
		<servlet-class>controller.InicioServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ListadoOficinasServlet</servlet-name>
		<servlet-class>controller.ListadoOficinasServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>controller.LoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>RegistroOficinaServlet</servlet-name>
		<servlet-class>controller.RegistroOficinaServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.jpg</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>InicioServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/errors/error-404.jpg</location>
	</error-page>

</web-app>